<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android = "http://schemas.android.com/apk/res/android"
             android:layout_width = "match_parent"
             android:layout_height = "match_parent"
             android:orientation = "vertical" >

	<com.timedancing.easyfirewall.view.GuideImageView
			android:id = "@+id/img_guide"
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:layout_gravity = "center_horizontal"
			android:layout_marginBottom = "72dp"
			android:layout_marginTop = "48dp"
			android:src = "@drawable/guide3" />

	<Button
			android:id = "@+id/btn_go"
			android:layout_width = "120dp"
			android:layout_height = "42dp"
			android:layout_gravity = "center_horizontal|bottom"
			android:layout_marginBottom = "48dp"
			android:background = "@drawable/rect_guide_btn"
			android:text = "@string/guide_start_right_now"
			android:textColor = "#1bCAE7"
			android:textSize = "19dp" />


</FrameLayout >